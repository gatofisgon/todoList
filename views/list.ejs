<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= kindOfDay %> </h1>
    </div>

    <div class="box">
        <% for (var i = 0; i<newListItem.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newListItem[i] %></p>
        
            </div>
        <% } %>
        <form action="/" class="item" method="post">

            <input type="text" name="newList" placeholder="New item" autocomplete="off">
    
            <button type="submit">+</button>
    
        </form>
    </div>

<%- include("footer") -%>